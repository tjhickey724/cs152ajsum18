extends layoutBS

block content
  h1 Add a Skill
  form(method="post" action="saveSkill")
    .formGroup
      label skill name
      input(type="text" name="name")
    .formGroup
      label description
      textarea(name="description" rows="10" cols="80")
    input(type="submit")
  hr
  h1 List of All Skills
  ol
    each skill in skills
      li
        e #{skill.name} -- 
        i #{skill.description}
  hr
